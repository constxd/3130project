<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/section_times_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section_professor"
            android:layout_marginTop="95dp"
            android:text="4424234"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/section_times_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section_crn"
            android:layout_marginTop="44dp"
            android:text="Juliano Franz"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/section_times_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:text="CSCI 3130"
            android:textSize="14sp" />



    </android.support.v7.widget.CardView>

</RelativeLayout>
