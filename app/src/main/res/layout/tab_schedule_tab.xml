<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/monday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="8 AM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="9 AM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="10 AM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="11 AM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="12 PM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="1 PM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="2 PM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="3 PM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="4 PM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="5 PM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="6 PM"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:text="7 PM"
                android:textAlignment="viewEnd" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
